@page "/forgot-password"

<MudText Typo="Typo.h1" GutterBottom="true">Forgot password ?</MudText>

    <MudText 
        Typo="Typo.subtitle2">
        Enter the email address linked to your account
    </MudText>
    <MudText 
        Typo="Typo.subtitle2">
        You will recieve an email containing a link to reset password
    </MudText>

<MudTextField T="string" Label="E-mail" Variant="Variant.Outlined" Class="my-4"></MudTextField>

<MudText Class="mt-4">Know your password ? <MudLink Href="/login">Sign In</MudLink></MudText>
<MudButton
    Variant="Variant.Filled"
    Color="Color.Tertiary"
    Link="/pages/authentication/reset-password"
    Size="Size.Large"
    Class="mt-8">
    Reset Password
</MudButton>

